extends ../shared/template
block content
  .row#location(data-location= client.location, data-lat= client.lat, data-lng= client.lng)
      h1 Owner
    .col-xs-5.col-xs-offset-1
      h3: a(href=(client.email === user.email ? '/profile' : '/users/' + client.email))= client.email
      h4= client.location
      #smallmap
    .col-xs-6
      h2= item.name
      each photo in item.photos
        .photo.thumbnail#itemPhotos(style='background-image:url(#{photo});')
  .row
    .col-xs-5.col-xs-offset-1
      a.btn.btn-danger.btn-lg(href='/items/#{item._id}/bid') MAKE SWOFFER!
    .col-xs-6
      h2 Description
        p= item.description

block scripts
  script(src='/js/user/itemShow.js')
