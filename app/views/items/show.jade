extends ../shared/template
block content
  h2 Profile Page
  .row
    .col-xs-12
      h2: a(href'/profile/edit')= user.email
      h4= user.location
  .row
    .col-xs-3
      a.thumbnail(href='#{user.photo}')
        img(src=user.photo)
    .col-xs-9
  .row
    h1 Available
    .col-xs-4
      table.table.table-striped.table-hover.table-bordered
        thead
          th Name
          th Photo
          th Description
        tbody
          this will loop through each item in user.items
            tr
              td items.name
              td items.photo
              td items.description
    .col-xs-4
      h1 Not Available
        this will loop through each itemphoto in user.itemsphoto(!isAvailable) testing this out
    .col-xs-4

