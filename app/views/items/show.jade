      h2: a(href'/profile/edit')= client.email
      h4= client.location
  .row
    .col-xs-3
      a.thumbnail#itemShow(style='background-image:url(#{item.photo[0]});')
    .col-xs-3
      #smallmap
    .col-xs-3
  .row
    h1= item.name
    .col-xs-4
    .col-xs-4
    .col-xs-4

