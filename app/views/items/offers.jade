extends ../shared/template
block content
  h3 Accepting/Rejecting Offers
  .row
    .col-xs-9.col-xs-offset-3
      table
        thead
          th Your Items
          th Bid Items
          th Response
        tbody
          each array1 in pendOffers
            each offer in array1
              tr
                td : a(href='/items/pend._id')=pend.name
                td : a(href='/items/item._id')=item.name
                td
                  a(href='/offers/item._Id/accept/bid._Id') Accept
                  a(href='/offers/item._Id/reject/bid.Id') Reject




block scripts
  script(src='/js/user/itemsIndex.js')
