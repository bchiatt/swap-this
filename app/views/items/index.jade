extends ../shared/template
block content
  h2 Swap-de-monium
  .container
    .row
      .col-xs-12
        #bigmap
    .row
      .col-xs-12
        table#index.table.table-condensed.table-hover
          thead
            th Photo
            th Name
            th Description
            th Bids
            th Location
            th tags
            th Seller
          tbody
            each location in locations
              tr.locactions(data-lat=location.lat, data-lng=location.lng, data-name=location.email)
            each item in items
              tr: a(href='/items/#{item._id}')
                td: a(href='/items/#{item._id}').photo.thumbnail(style='background-image:url(#{item.photos[0]});')
                td: a(href='/items/#{item._id}')= item.name
                td: a(href='/items/#{item._id}')= item.description
                td: a(href='/items/#{item._id}')= item.bids.length
                td: a(href='/items/#{item._id}')= item.location
                td: a(href='/items/#{item._id}')= item.tags
                td: a(href='/items/#{item._id}')= item.ownerId.email
block scripts
  script(src='/js/user/itemsIndex.js')
