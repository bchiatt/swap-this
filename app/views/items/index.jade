extends ../shared/template
block content
  h2 Swap-de-monium
  .container
    .row
      .col-xs-12
        #bigmap
    .row
      .col-xs-12
        table.table.table-striped
          thead
            th Photo
            th Description
            th Bids
            th Location
            th tags
            th Seller
          tbody
            loop througheach item in items
              tr
                //(data-name=item.location, data-lat=item.lat, data-lng=item.lng)
                td a(href='/items/{item._id}') item.photo
                td a(href='/items/{item._id}') item.description
                td a(href='/items/{item._id}') item.bids
                td a(href='/items/{item._id}') item.location
                td item.tags
                td a(href='/profile')= user.email
block scripts
  script(src='/js/user/itemsIndex.js')
