extends ../shared/template
block content
  h2 Profile Page
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      h4= user.location
  .row
    .col-xs-2
      a.thumbnail(src='#{user.photo}')
        img(src=user.photo)
    .col-xs-10
  .row
    h1 Available
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          th Name
          th Photo
          th Description
          th
        tbody
          each item in pubItems
            tr
              td: a(href='/items/#{item._id}')=item.name
              td.photo.thumbnail#photo(style='background-image:url(#{item.photos[0]});')
              td= item.description
              td.btn: a(href='/items/#{item._id}/edit') Edit item
  .row
    h1 Not Available
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          th Name
          th Photo
          th Description
        tbody
          each item in privItems
            tr
              td= item.name
              td.photo.thumbnail#photo(style='background-image:url(#{item.photos[0]});')
              td= item.description

block scripts

