extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      hl
      h4= user.location
  .row
    .col-xs-2
      a.thumbnail(src='#{user.photo}')
        img(src=user.photo)
    .col-xs-10
  .row
    h1#available Available
    .col-xs-12
      table.table.table-condensed
        thead
          th Name
          th Photo
          th Description
          th
        tbody
          each item in pubItems
            tr
              td#name: a(href='/items/#{item._id}')=item.name
              td.photo.thumbnail#photo(style='background-image:url(#{item.photos[0]});')
              td= item.description
              td.btn-info.btn-default#edit: a(href='/items/#{item._id}/edit') Edit Item
  .row
    h1#available Not Available
    .col-xs-12
      table.table.table-condensed
        thead
          th Name
          th Photo
          th Description
          th 
        tbody
          each item in privItems
            tr
              td= item.name
              td.photo.thumbnail#photo(style='background-image:url(#{item.photos[0]});')
              td= item.description
              td.btn-info.btn-default#edit: a(href='/items/#{item._id}/edit') Edit Item

