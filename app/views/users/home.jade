extends ../shared/template
block content
  h2 Profile Page
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      
      h4= user.location
  .row
    .col-xs-2
      a.thumbnail(href='#{user.photo}')
        img(src=user.photo)
    .col-xs-10
  .row
    h1 Available
    .col-xs-6
      table.table.table-striped.table-hover.table-bordered
        thead
          th Name
          th Photo
          th Description
        tbody
          loop each item in items
            tr
              td item.name
              td item.photo
              td item.description
    h1 Not Available
    .col-xs-6
      table.table.table-striped.table-hover.table-bordered
        thead
          th Name
          th Photo
          th Description
        tbody
          loop each item in items
            tr
              td item.name
              td item.photo
              td item.description

block scripts

